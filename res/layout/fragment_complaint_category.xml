<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_category_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:minHeight="?android:attr/listPreferredItemHeight" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/textview_category_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/label_category_type"
            android:textAppearance="@style/Holo.TextAppearance.Large.Light"
            android:textColor="@color/holo_blue_light"
            android:textStyle="bold" />

        <org.holoeverywhere.widget.Spinner
            android:id="@+id/spinner_category_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/textview_category_type" />
    </RelativeLayout>

    <org.holoeverywhere.widget.ListView
        android:id="@+id/list_category_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_category_type"
        android:choiceMode="singleChoice" >
    </org.holoeverywhere.widget.ListView>

</RelativeLayout>